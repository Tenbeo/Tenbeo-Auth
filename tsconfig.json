{
	"compilerOptions": {
		"target" : "esnext",
		"module": "esnext",
		"isolatedModules": false,
		"useDefineForClassFields" : true,
		"types": ["vite/client", "node"],
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"jsx": "react",
		"moduleResolution": "node",
		"lib": ["DOM", "ESNext"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"./dist",
		"./node_modules",
	]
}